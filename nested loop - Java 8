import java.io.*;
import java.util.*;

public class Solution {

    public static void main(String[] args) {
        /* Enter your code here. Read input from STDIN. Print output to STDOUT. Your class should be named Solution. */
        Scanner sc = new Scanner(System.in);
        int T = sc.nextInt();
            for (int i = 0; i < T; i++) {
                int a = sc.nextInt();
                int b = sc.nextInt();
                int N = sc.nextInt();
                    for (int j=0; j<N; j++)
                        {
                        int suma = a;
                        int licznik = j;
                            while (licznik >= 0)
                                {
                                suma += (Math.pow(2,licznik)*b);
                                licznik--;
                                }
                System.out.print(suma + " ");
                        }
       System.out.print("\n");
   }
}
}
